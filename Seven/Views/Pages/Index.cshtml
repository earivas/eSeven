@model IEnumerable<Seven.Models.Page>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PageType.PageTypeDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipValue)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PageType.PageTypeDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipValue)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PageID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PageID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PageID })
        </td>
    </tr>
}

</table>
